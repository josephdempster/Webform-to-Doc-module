function webform_to_doc_webform_submission_presave($node, $submission) {
	#Filter the webform by node id so that the hook only fires on the supplied form
	
	if ($node->nid == '6') {
	
		$submitted_data = $submission->data;
		
	   /*
		* Create pseudo-random string for filename, create file then set $path to the complete filename, this will allow us to associate a filename with
		* a webform submission which will be useful when we're doing calculation recording.
		*/
		
		$fn = md5(microtime()).'.php';
		touch('bin/'.$fn);
		touch('bin/html/'.$fn);
		$path = 'bin/'.$fn;
		$html_path = 'bin/html/'.$fn;
		$link = 'http://www.shiawills.org/bin/'.$fn;
		$html_link = 'http://www.shiawills.org/bin/html/'.$fn;
		
		/* for debugging */
		
		$form_vars = get_defined_vars();
		
	   /*
       	* base values for calculation, we may need a seperate set for leasehold properties where there is no land to calculate and wife should in 
		* theory inherit 100% of property
		*/
		
		$debts = $submitted_data[28]['value'][0];
		$currency = $submitted_data[30]['value'][0];
		$non_property_land_assets = $submitted_data[26]['value'][0] + $submitted_data[25]['value'][0] + $submitted_data[22]['value'][0];
		$house_less_mortgage = $submitted_data[19]['value'][0] - $submitted_data[25]['value'][0];
		
		/*
		 * Wifes shares will now work differently, values concerning that here
		 *
		 */
		 $land_value_of_primary_home = $submitted_data[6]['value'][0];
		 $land_value_of_shared_property = $submitted_data[34]['value'][0];
		 $land_value_of_sole_property = $submitted_data[36]['value'][0];
		 $total_land_value = $land_value_of_primary_home + $land_value_of_shared_property + $and_value_of_sole_property
		 // $house_inheritable_by_wife_less_mortgage = $total_property_value_inheritable_by_wife - $submitted_data[25]['value'][0]
		 
		 
		 
		 
		
	   /*
		* Swap currency code for symbol
		*/
		
		if ($currency == 'usd') { 
			$currency = "USD &#36;";
		} else if ($currency == 'gbp') {
			$currency = "GBP &pound;";
		} else if ($currency == 'eur') {
		 $currency = "EUR &euro;";
		}
		/*
		* Is this house shared ownership? If so divide by 2
		*
		*/
				
		if ($submitted_data[20]['value'][0] == "Yes") {
			$value_of_house_in_estate = $house_less_mortgage / 2;
		} else {
			$value_of_house_in_estate = $house_less_mortgage;
		}
		
		$value_of_land_in_estate = $value_of_house_in_estate / 2;
		$value_of_property_in_estate = $value_of_house_in_estate / 2;
		$other_land_shared = $submitted_data[23]['value'][0] / 2;
		$other_land_solo =  $submitted_data[24]['value'][0];
		$other_land = ($other_land_shared + $other_land_solo) / 2;
		$other_property = ($other_land_shared + $other_land_solo) / 2;
		$gender_of_deceased = $submitted_data[8]['value'][0];
		
		#Total of individual asset classes
		
		$total_land_estate = $value_of_land_in_estate + $other_land; //land is not inheritable by wife
		$total_nonland_estate = $non_property_land_assets + $value_of_property_in_estate + $other_property - $debts;
		
		#Gross assets
		
		$total_estate = $total_land_estate + $total_nonland_estate;
		
		$net_estate = $total_estate - $debts;
		
		#Third Removed
		
		$total_nonland_estate_third_removed = $total_nonland_estate * (2/3);
		$total_estate_third_removed = $total_estate * (2/3);
		
		# round to 2 decimal places, this is usually done for currency and it will ensure any long recurring decimals don't skew the calculation.
		
		$total_estate_third_removed = round($total_estate_third_removed, 2);
		
	   /*
		* Details of Heirs
		* $father_alive Boolean (yes/no)
		* $mother_alive Boolean (yes/no)
		* $number_of_children Integer (number of daughters + number of sons)
		* $number_of_daughters Integer
		* $number_of_sons Integer
		* $brothers_sharing_father Integer (number of living full brothers + number of living half brothers)
		* $sisters_sharing_father Integer (number of living full sisters + number of living half sisters)
		*/
		
		$father_alive = $submitted_data[11]['value'][0]; 
		$mother_alive = $submitted_data[12]['value'][0]; 
		$spouse_alive = $submitted_data[29]['value'][0]; 
		$number_of_children = $submitted_data[15]['value'][0] + $submitted_data[14]['value'][0];
		$number_of_daughters = $submitted_data[15]['value'][0];
		$number_of_sons = $submitted_data[14]['value'][0];
		$brothers_sharing_father = $submitted_data[13]['value'][0] + $submitted_data[17]['value'][0];
		$sisters_sharing_father = $submitted_data[16]['value'][0] + $submitted_data[18]['value'][0];
		
		if ($father_alive=="yes") {
			$father_val = 1;
		}
		
		#Calculate if mother has blocker
		
		if ($father_alive=="yes" && $brothers_sharing_father >= 2) {
			$mother_has_blocker = "Yes"; 
		} else if ($father_alive=="yes" && $sisters_sharing_father >= 4) {
			$mother_has_blocker = "Yes";
		} else if ($father_alive=="yes" && $brothers_sharing_father >= 1 && $sisters_sharing_father >= 2) {
			$mother_has_blocker = "Yes";
		} else {
			$mother_has_blocker = "No";
		}
		
		#Calculate Divisor For Children
		
			
		$divisor_for_children = 2 * $number_of_sons + $number_of_daughters;
		
		if ($number_of_sons == 0 && $number_of_daughters == 1) {
			$divisor_for_daughters = 2;
		} else if ($number_of_sons == 0 && $number_of_daughters >= 2) {
			$divisor_for_daughters = 1.5;
		} else {
			$divisor_for_daughters = 1;
		}
		
		$divisor_for_sons = 2 * $divisor_for_children;
		
		#calculate divisor for spouse
		
		if ($gender_of_deceased == "Male" && $number_of_children > 0) {
			$divisor_for_spouse = 8;
		} else if ($gender_of_deceased == "Male" && $number_of_children == 0) {
			$divisor_for_spouse = 4;
		} else if ($gender_of_deceased == "Female" && $number_of_children > 0) {
			$divisor_for_spouse = 4;
		} else if ($gender_of_deceased == "Female" && $number_of_children == 0) {
			$divisor_for_spouse = 2;
		}
		
		#calculate divisor for mother
		
		if ($number_of_children >= 0 || $mother_has_blocker == "Yes") {
			$divisor_for_mother=6;
		} else {
			$divisor_for_mother=3;
		}
		
		#Calculate divisor for father
		
		if ($number_of_children >= 0) {
			$divisor_for_father = 6;
		} else {
			$divisor_for_father = 1;
		}
		
		#Calculate Bouncing Shares
		
		if ($father_alive == "yes") {
			$father_has_bouncing_share = 1;
		} else {
			$father_has_bouncing_share = 0;
		}
		
		if ($mother_alive == "yes" && $mother_has_blocker == "No") {
			$mother_has_bouncing_share = 1;
		} else {
			$mother_has_bouncing_share =  0;
		}
		
		if ($number_of_daughters > 0 && $number_of_sons == 0) {
			$daughters_have_bouncing_share = 1;
		} else {
			$daughters_have_bouncing_share = 0;
		}
		
		$bouncing_denominator = 0;
		
		if ($father_has_bouncing_share == 1) {
			 $bouncing_denominator += 1/$divisor_for_father; 
		}
		
		if ($mother_has_bouncing_share == 1) {
			 $bouncing_denominator += 1/$divisor_for_mother; 
		}
		
		if ($daughters_have_bouncing_share == 1) {
			 $bouncing_denominator += 1/$divisor_for_daughters; 
		}
		
		
		
		/* Retiring this code for the time being
		
		$father_denominator = $father_val * ($divisor_for_father / 1);
		$mother_denominator = $mother_has_bouncing_share * ($divisor_for_mother / 1);
		$daughter_denominator =  $daughters_have_bouncing_share * ($divisor_for_daughters / 1);
		
		$bouncing_denominator = $father_denominator + $mother_denominator + $daughter_denominator;
		
		*/
		
	#	$bouncing_denominator =  $father_alive * ($divisor_for_father / 1) $mother_has_bouncing_share * ($divisor_for_mother / 1)  $daughters_have_bouncing_share * ($divisor_for_daughters / 1);
		
		#Calculate Daughters Bouncing Share
		
		if ($daughters_have_bouncing_share == 1) {
			$daughters_bouncing_share = (1 / $divisor_for_daughters) / $bouncing_denominator; 
		} else {
			$daughters_bouncing_share = 0;
		}
		
		#Calculate Mothers Bouncing Share
		
		if ($mother_has_bouncing_share == 1) {
			$mothers_bouncing_share = (1 / $divisor_for_mother) / $bouncing_denominator; 
		} else {
			$mothers_bouncing_share = 0;
		}
		
		#Calculate Fathers Bouncing Share
		
		if ($father_alive == "yes") {
			$fathers_bouncing_share = (1 / $divisor_for_father) / $bouncing_denominator; 
		} else {
			$fathers_bouncing_share = 0;
		}
		
	
		
		
		#Please be aware that these conditionals work on a cascading total, please do not rearrange the order or the universe will collapse and it will be your fault
		
		#spouse Share
		if ($spouse_alive == "Yes") {
			if($gender_of_deceased=="Male") {
				$total_nonland_estate_third_removed = $total_estate_third_removed - $total_land_value;
				$spouse_share = $total_nonland_estate_third_removed / $divisor_for_spouse;
				$remaining_estate = $total_estate_third_removed - $spouse_share;
				} else {
				$spouse_share = $total_estate_third_removed / $divisor_for_spouse;
				$remaining_estate = $total_estate_third_removed - $spouse_share;
			}
		} else {
			$remaining_estate = $total_estate_third_removed;
		}
		
		#mothers Share 
		
		if ($mother_alive == "yes") {
			$mother_share = min($total_estate_third_removed / $divisor_for_mother, $remaining_estate);
			$remaining_estate = $remaining_estate - $mother_share;
		}
		
		#fathers Share
		
		if ($father_alive == "yes") {
			$father_share = min($total_estate_third_removed / $divisor_for_father, $remaining_estate);
			$remaining_estate = $remaining_estate - $father_share;
		}
		
		#daughters share
		if ($number_of_daughters > 0) {
			if ($number_of_sons > 0) {
				$daughter_share = $remaining_estate * $number_of_daughters / $divisor_for_children;
			} else {
				$daughter_share = min($total_estate_third_removed / $divisor_for_daughters, $remaining_estate);
			}
		}
		
		#Sons Share
		if ($number_of_sons > 0) {
			$son_share = $remaining_estate * 2 * $number_of_sons / $divisor_for_children;
		}
		
		$first_pass_deductions = $spouse_share + $mother_share + $father_share + $daughter_share + $son_share;
		
		$remaining_estate_after_first_pass = $total_estate_third_removed - $first_pass_deductions;
		
		
		#Bouncing Share
		$mothers_bouncing_share_total = $remaining_estate_after_first_pass * $mothers_bouncing_share;
		$fathers_bouncing_share_total = $remaining_estate_after_first_pass * $fathers_bouncing_share;
		$daughters_bouncing_share_total = $remaining_estate_after_first_pass * $daughters_bouncing_share;
		
		#Grand totals
		$discretionary_total = number_format(round($total_estate / 3, 2),2);
		$spouse_complete_share = number_format(round($spouse_share, 2),2);
		$mother_complete_share = number_format(round($mother_share + $mothers_bouncing_share_total, 2),2);
		$father_complete_share = number_format(round($father_share + $fathers_bouncing_share_total, 2),2);
		$daughter_complete_share = number_format(round($daughter_share + $daughters_bouncing_share_total, 2),2);
		$son_complete_share = number_format(round($son_share, 2),2);
		$total_estate = number_format($total_estate, 2);
		$debts = number_format($debts, 2);
		$net_estate = number_format($net_estate, 2);
		$total_estate_third_removed = number_format($total_estate_third_removed, 2);
		
